<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/homeCall"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginTop="0sp"
            android:layout_below="@id/test"
            android:text="@string/homeCallNowButton"
            android:textSize="20sp"
            android:background="@android:color/holo_blue_bright"

            />
        <Button
            android:id="@+id/homeSendLocation"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:layout_below="@id/homeCall"
            android:text="@string/homeSendLocationButton"
            android:textSize="20sp"
            android:background="@android:color/holo_blue_bright"

            />
        <Button
            android:id="@+id/homeMenuButton"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:layout_below="@id/homeSendLocation"
            android:text="@string/homeMenuButton"
            android:textSize="20sp"
            android:background="@android:color/holo_blue_bright"

            />
        <Button
            android:id="@+id/homeQuitButton"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:layout_marginTop="40sp"
            android:layout_below="@id/homeMenuButton"
            android:text="@string/homeQuitButton"
            android:textSize="20sp"
            android:background="@android:color/holo_blue_bright"

            />
    </RelativeLayout>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>